<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Add border radius here -->
        </shape>
    </item>

    <!-- Middle Border -->
    <item
            android:bottom="3dp"
            android:left="3dp"
            android:right="3dp"
            android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Add border radius here -->
            <stroke
                    android:width="6dp"
                    android:color="@color/colorCard2"/>
        </shape>
    </item>

    <!-- Inner Fill -->
    <item
            android:bottom="6dp"
            android:top="6dp"
            android:right="6dp"
            android:left="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Add border radius here -->
            <solid android:color="@color/colorCard2"/>
        </shape>
    </item>

</layer-list>
