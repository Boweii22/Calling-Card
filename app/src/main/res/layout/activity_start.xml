<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/black">

    <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Card"
            android:textSize="45sp"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>

    <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="just for you and your business"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_margin="12dp"
            android:layout_below="@id/text1"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="12dp"
            android:layout_below="@id/text2"/>


    <!-- Slide to Act Widget -->
    <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/slideToActView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            app:text="Swipe to Create now"
            app:slider_icon="@drawable/baseline_arrow"
            app:complete_icon="@drawable/baseline_check"
            app:outer_color="@color/grey"
            app:inner_color="@color/white"
            app:border_radius="30dp"
            app:slider_height="60dp"
            app:animation_duration="300"
            app:slider_locked="false"
            app:area_margin="8dp"
            app:icon_margin="8dp"
            app:bump_vibration="50"
            app:bounce_on_start="true"
            android:elevation="4dp" />

</RelativeLayout>
