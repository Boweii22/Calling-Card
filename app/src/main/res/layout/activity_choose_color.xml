<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ChooseColorActivity">

    <TextView
            android:id="@+id/choose_color_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Choose Color"
            android:textSize="37sp"
            android:layout_margin="12sp"
            android:gravity="center"
            android:textStyle="bold" />


<FrameLayout
        android:id="@+id/frameLayoutColorCardIndicator"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/choose_color_textview"
        android:background="@drawable/card_color_indicator">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/text_header_background"
            android:text="hello" />


</FrameLayout>

<ScrollView
        android:id="@+id/scrollView"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frameLayoutColorCardIndicator">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frameLayoutColorCardIndicator"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">
            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1">

                <View
                        android:id="@+id/viewColor1"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:background="@drawable/background_card_color_1"/>

                <ImageView
                        android:id="@+id/imageColor1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:src="@drawable/baseline_check"
                        android:layout_gravity="center_horizontal|center"
                        app:tint="@color/white" />
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="4dp"
                    android:layout_weight="1">

                <View
                        android:id="@+id/viewColor2"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:background="@drawable/background_card_color_2"/>


                <ImageView
                        android:id="@+id/imageColor2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">
            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1">

                <View
                        android:id="@+id/viewColor3"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:background="@drawable/background_card_color_3"/>

                <ImageView
                        android:id="@+id/imageColor3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="4dp"
                    android:layout_weight="1">

                <View
                        android:id="@+id/viewColor4"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:background="@drawable/background_card_color_4"/>

                <ImageView
                        android:id="@+id/imageColor4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">
            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1">

                <View
                        android:id="@+id/viewColor5"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:background="@drawable/background_card_color_5"/>

                <ImageView
                        android:id="@+id/imageColor5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="4dp"
                    android:layout_weight="1">

                <View
                        android:id="@+id/viewColor6"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color"/>

                <ImageView
                        android:id="@+id/imageColor6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />

            </FrameLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#333333"
                android:layout_below="@id/scrollView"
                android:layout_margin="8dp"
                android:text="Continue"
                android:textColor="@color/white" />

    </LinearLayout>


</ScrollView>





</RelativeLayout>